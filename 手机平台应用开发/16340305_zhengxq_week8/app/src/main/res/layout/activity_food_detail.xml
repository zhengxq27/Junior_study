<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".foodDetail">

    <LinearLayout
       android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/title"
            android:layout_width="fill_parent"
            android:layout_height="230dp"
            android:background="@color/colorPrimary"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="25dp"
            android:paddingBottom="25dp">
            <ImageButton
                android:id="@+id/back_button"
                android:clickable="true"
                android:onClick="backButton_click"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/back"
                android:background="@color/colorPrimary"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"/>
            <TextView
                android:id="@+id/food_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="大豆"
                android:textSize="30dp"
                android:textColor="@color/white"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"/>
            <ImageView
                android:id="@+id/Star"
                android:clickable="true"
                android:onClick="click_star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/empty_star"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingRight="15dp"
            android:paddingTop="10dp"
            android:paddingBottom="15dp">
            <TextView
                android:id="@+id/food_kind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="粮食"
                android:textColor="#D5000000"
                android:textSize="20dp"
                android:layout_marginBottom="5dp"/>
            <TextView
                android:id="@+id/element"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="富含 蛋白质"
                android:textSize="20dp"
                android:textColor="#8A000000"
                android:layout_below="@+id/food_kind"
                android:layout_marginBottom="10dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#1E000000"
                android:layout_below="@id/element"/>
            <ImageView
                android:clickable="true"
                android:onClick="shoppingChart_click"
                android:background="@drawable/collect"
                android:id="@+id/collect"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="centerInside"
                android:layout_marginLeft="25dp"
                android:layout_alignParentRight="true"/>
            <View
                android:layout_width="1dp"
                android:layout_height="60dp"
                android:background="#1E000000"
                android:layout_toLeftOf="@id/collect" />
            <TextView
                android:id="@+id/more_info"
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="更多资料"
                android:textSize="30dp"
                android:textColor="#D5000000"
                android:layout_below="@id/element"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_below="@+id/more_info"
            android:background="#1E000000"/>
        <ListView
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>